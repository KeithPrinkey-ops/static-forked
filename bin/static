#!/usr/bin/env node

var myArgs = process.argv.slice(2);
var cmd = myArgs[0];
var arg1 = myArgs[1];

if(cmd == 'new'){
    var newCmd = require('../src/new.js');
    newCmd.newProject(arg1);
}

if(cmd == 'dev'){
    var dev = require('../src/dev.js');
    dev.start();
}

if(cmd == 'build'){
    let url = 'relative';
    if(arg1 != 'undefined'){
        url = arg1;
    }
    var build = require('../src/build.js');
    build.start(url);
}